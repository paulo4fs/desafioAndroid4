<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcvCardGameList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim10dp"
    app:cardCornerRadius="@dimen/dim10dp"
    tools:showIn="@layout/fragment_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCoverList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="@dimen/dim8dp"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/dim18sp"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/dim5dp"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvCreatedAtList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/LightGray2"
            android:layout_marginBottom="@dimen/dim8dp"
            android:layout_marginHorizontal="@dimen/dim5dp"
            tools:text="@tools:sample/date/ddmmyy"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>